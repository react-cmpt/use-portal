{
  "name": "@react-cmpt/use-portal",
  "version": "0.2.1",
  "description": "React partals with hooks",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "esm/index.js",
  "sideEffects": false,
  "scripts": {
    "example": "parcel serve ./example/index.html",
    "example:build": "rm -rf ./dist/example && parcel build ./example/index.html --target example",
    "example:deploy": "yarn example:build && gh-pages -d ./dist/example",
    "build": "rm -rf ./lib/* ./esm/* && yarn build:cjs && yarn build:es",
    "build:cjs": "tsc",
    "build:es": "tsc -m ESNext --outDir ./esm",
    "test": "jest -c jest.json",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "prettier": "prettier --write './src/**/*.{ts,tsx}' --config ./.prettierrc",
    "prepare": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/react-cmpt/use-portal.git"
  },
  "keywords": [
    "react",
    "react-portal",
    "portal",
    "createPortal",
    "react-component",
    "modal",
    "dialog"
  ],
  "author": "wangcch <wangcch.cc@gmail.com>",
  "license": "MIT",
  "files": [
    "esm",
    "lib"
  ],
  "dependencies": {},
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@testing-library/react": "^11.0.4",
    "@testing-library/react-hooks": "^3.4.1",
    "@types/jest": "^26.0.13",
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@types/react-transition-group": "^4.4.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "emotion": "^10.0.27",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "parcel": "^2.8.3",
    "prettier": "^2.1.1",
    "process": "^0.11.10",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "react-transition-group": "^4.4.1",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js}": [
      "eslint --fix",
      "git add"
    ]
  },
  "targets": {
    "example": {
      "context": "browser",
      "publicUrl": "./",
      "isLibrary": false
    }
  }
}
